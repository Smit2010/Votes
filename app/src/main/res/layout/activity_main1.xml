<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0f8076"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context="com.example.abhinavraj.votes.Main1Activity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:fontFamily="serif"
        android:text="WELCOME VOTER"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="visible" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView"
        android:layout_marginEnd="103dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/vote" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/imageView2"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Voter Login"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:id="@+id/toVote"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Host Login"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:id="@+id/HostVote"
            android:textAlignment="center"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usernameText"
        android:text="User"
        android:textColor="#FFFFFF"
        android:layout_centerVertical="true"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:layout_below="@id/linearLayout"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name:"
        android:layout_toEndOf="@+id/usernameText"
        android:textColor="#FFFFFF"
        android:layout_centerVertical="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@id/linearLayout"
        android:layout_marginTop="20dp"
        android:id="@+id/usernameText1"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/usernameText"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corner"
        android:layout_alignStart="@+id/usernameText" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernameText"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:ems="12"
        android:fontFamily="monospace"
        android:hint="ENTER USERNAME"
        android:layout_alignStart="@+id/usernameText1"
        />


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/usernameText"
        android:layout_alignTop="@+id/editText6"
        app:srcCompat="@drawable/ager" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:text="Pass"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:text="word:"
        android:layout_toEndOf="@+id/textView2"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:id="@+id/textView2_1"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corner"
        android:layout_alignStart="@+id/textView2"/>


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignTop="@+id/editText3"
        app:srcCompat="@drawable/ager" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:ems="12"
        android:fontFamily="monospace"
        android:hint="ENTER THE PASSWORD"
        android:layout_alignStart="@+id/textView2_1"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editText3"
        android:layout_marginTop="30dp"
        android:fontFamily="serif"
        android:text="PROCEED"
        android:background="@color/main"/>



</android.widget.RelativeLayout>
